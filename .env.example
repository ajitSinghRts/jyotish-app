# ============================================
# JYOTISH APP - DOCKER ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and update values
# Run: cp .env.example .env

# ============================================
# MYSQL DATABASE CONFIGURATION
# ============================================
MYSQL_ROOT_PASSWORD=rootpass123
MYSQL_DATABASE=astroos
MYSQL_USER=astro
MYSQL_PASSWORD=astropass123

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://redis:6379/0

# ============================================
# BACKEND (FASTAPI) CONFIGURATION
# ============================================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8001
DATABASE_URL=mysql+pymysql://astro:astropass123@mysql:3306/astroos

# Secret Key for JWT - Change this in production!
SECRET_KEY=your-secret-key-change-this-in-production-12345

# OpenAI API Key (optional)
OPENAI_API_KEY=your_openai_api_key_here

# ============================================
# CELERY CONFIGURATION
# ============================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# ============================================
# FRONTEND (REACT + VITE) CONFIGURATION
# ============================================
VITE_API_BASE_URL=http://localhost:8001/api
VITE_BACKEND_URL=http://backend:8001

# ============================================
# APPLICATION ENVIRONMENT
# ============================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=info

# ============================================
# DOCKER COMPOSE SPECIFIC
# ============================================
# Docker service names
DB_SERVICE_NAME=mysql
REDIS_SERVICE_NAME=redis
BACKEND_SERVICE_NAME=backend
FRONTEND_SERVICE_NAME=frontend
