# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
MYSQL_HOST=localhost
MYSQL_USER=astroos_user
MYSQL_PASSWORD=astroos_pass_secure_123
MYSQL_DB=astroos_db
MYSQL_PORT=3306

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# API Configuration
API_HOST=0.0.0.0
API_PORT=8001
ENVIRONMENT=development
DEBUG=True

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# AI/ML Services
OPENAI_API_KEY=sk-your-openai-key-here
GEMINI_API_KEY=your-google-gemini-key

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@astroos.com

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/astroos.log

# Feature Flags
ENABLE_DEMO_MODE=True
ENABLE_EMAIL_NOTIFICATIONS=False
ENABLE_PAYMENT_GATEWAY=False

# Database Migration
ALEMBIC_SQLALCHEMY_URL=mysql+pymysql://astroos_user:astroos_pass_secure_123@localhost:3306/astroos_db
